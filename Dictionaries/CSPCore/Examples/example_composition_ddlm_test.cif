#######################################################################
#
#     Example 1: Inorganic Crystal with Single Fixed Composition
#
#######################################################################
data_ABC
_chemical.name ABC
_csp.structure_generation.space_group_number_list "all"
_csp.structure_generation.method "Evolutionary Algorithm"
_csp.structure_generation.density_lower_limit 750
_csp.structure_generation.density_upper_limit 1500
# No need to specify but equivalent to:
# _csp.structure_generation.composition_calculation "fixed"
# _csp.structure_generation.composition_types [A B C]
# _csp.structure_generation.composition_coefficients [[1 1 1]] # A1 B1 C1

# END

#######################################################################
#
#     Example 2: Inorganic Crystal with Multiple Fixed Compositions
#
#######################################################################
data_ABC
_chemical.name AxByCz
_csp.structure_generation.space_group_number_list "all"
_csp.structure_generation.method "Evolutionary Algorithm"
_csp.structure_generation.density_lower_limit 750
_csp.structure_generation.density_upper_limit 1500
_csp.structure_generation.composition_calculation "fixed"
_csp.structure_generation.composition_types [ A B C ]
_csp_structure_generation_composition_coefficients [[1 1 1] [1 1 2] [1 2 1] [2 1 1] [1 2 2] [2 1 2] [2 2 1] [2 2 2]]

# END

#######################################################################
#
#     Example 3: Inorganic Crystal with Variable-Compositions
#
#######################################################################
data_ABC
_chemical.name AxByCz
_csp.structure_generation.space_group_number_list "all"
_csp.structure_generation.method "Evolutionary Algorithm"
_csp.structure_generation.density_lower_limit 750
_csp.structure_generation.density_upper_limit 1500
_csp.structure_generation.composition_calculation "variable"
_csp.structure_generation.maximum_number_of_components 12
_csp.structure_generation.minimum_number_of_components 2
_csp.structure_generation.composition_types [ A B C ]
# xA + yB + zC with 2<x+y+z<12
_csp.structure_generation.composition_coefficients [[1 0 0] [0 1 0] [0 0 1]]

# END

#######################################################################
#
#     Example 4: Molecular Crystal with Variable-Compositions
#
#######################################################################
data_MOL1_water
_chemical.name MOL1-hydrate
_csp.structure_generation.space_group_number_list "all"
_csp.structure_generation.method "Evolutionary Algorithm"
_csp.structure_generation.density_lower_limit 750
_csp.structure_generation.density_upper_limit 1500
_csp.structure_generation.composition_calculation "variable"
loop_
    _csp.structure_generation.group_label
    _csp.structure_generation.group_atoms
    MOL1 [ C1 C2 H1 H2 ]
    water [ O1 H3 H4 ]
_csp.structure_generation.minimum_number_of_components 4
_csp.structure_generation.minimum_number_of_components 2
_csp.structure_generation.composition_types [MOL1 water]
# x(1*MOL1+ 0*water) + y(0*MOL1+ 1*water) with 2<x+y<4
_csp.structure_generation.composition_coefficients  [[1 0] [0 1]]

# END
